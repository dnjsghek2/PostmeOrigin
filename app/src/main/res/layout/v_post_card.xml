<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/card_view_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="8dp"
                android:text="ì°œ" />

            <ImageView
                android:id="@+id/his_feeling"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="8dp"
                android:background="@android:color/holo_blue_bright" />

            <ImageView
                android:id="@+id/his_state"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@+id/his_feeling"
                android:layout_marginLeft="8dp"
                android:layout_toEndOf="@+id/his_feeling"
                android:layout_toRightOf="@+id/his_feeling"
                android:background="@android:color/holo_green_light" />

            <TextView
                android:id="@+id/his_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/his_feeling"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/holo_red_dark"/>

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/his_body"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:textSize="16dp" />

            <TextView

                android:id="@+id/his_ctime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/nickname"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/server_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/nickname"
                android:layout_below="@+id/nickname"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:background="@android:color/holo_blue_light"/>


            <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New ToggleButton"
                android:id="@+id/Pick_local_btn"
                android:layout_below="@+id/server_image"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/mapimg"
                android:id="@+id/Pick_local_view"
                android:layout_below="@+id/Pick_local_btn"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="gone" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>