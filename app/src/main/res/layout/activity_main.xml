<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgwhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/splash_string_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/splash_img_main"
        android:layout_width="99dp"
        android:layout_height="123dp"
        android:layout_below="@id/splash_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/login_logo" />

    <TextView
        android:id="@+id/splash_text_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_img_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/splash_string_contents"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp" />

    <ImageButton
        android:id="@+id/btn_login"
        android:layout_marginBottom="70dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/splash_text_bottom"
        android:layout_toRightOf="@+id/textView20"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/facebook_off"
        android:background="#ffffff"/>

    <ImageButton
        android:id="@+id/btn_kakao"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btn_login"
        android:layout_toLeftOf="@+id/textView20"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/kakao_off"
        android:background="#ffffff"/>


    <TextView
        android:id="@+id/splash_text_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="@string/splash_string_bottom"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_text_contents"
        android:layout_centerHorizontal="true"
        android:text="New Text"
        android:visibility="invisible" />
</RelativeLayout>
