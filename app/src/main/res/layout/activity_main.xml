<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgwhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/splash_string_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/splash_img_main"
        android:layout_width="66dp"
        android:layout_height="84dp"
        android:layout_below="@id/splash_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="174dp"
        android:src="@drawable/splash_img" />

    <TextView
        android:id="@+id/splash_text_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_img_main"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/splash_string_contents"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="22sp" />

    <ImageButton
        android:id="@+id/btn_login"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/splash_text_contents"
        android:layout_marginTop="114dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/facebookbtn_out_img"
        android:layout_toRightOf="@+id/textView20" />

    <ImageButton
        android:id="@+id/btn_kakao"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/btn_login"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/kakabtn_out_img"
        android:layout_toLeftOf="@+id/textView20" />


    <TextView
        android:id="@+id/splash_text_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_img_main"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:layout_marginTop="246dp"
        android:text="@string/splash_string_bottom"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" />

    <TextView
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView20"
        android:layout_below="@+id/splash_text_contents"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
</RelativeLayout>
