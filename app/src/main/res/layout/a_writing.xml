<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDEDE"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/writing_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:height="?actionBarSize"
        android:background="#ffffff"
        app:theme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff">

        <RelativeLayout
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ToggleButton
                android:id="@+id/feeling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"

                android:text="감정버튼"
                android:checked="false" />

            <ToggleButton
                android:id="@+id/situation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="50dp"
                android:text="상황버튼" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dedede">

            <RadioGroup
                android:id="@+id/feeling_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="#ffffff"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="9dp"
                android:paddingTop="9dp"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/joy"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_marginRight="48dp"
                    android:background="@drawable/radio"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/anger"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_marginRight="48dp"
                    android:background="@drawable/radio1"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/sorrow"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:layout_marginRight="48dp"
                    android:background="@drawable/radio2"
                    android:button="@android:color/transparent" />

                <RadioButton
                    android:id="@+id/pleasure"
                    android:layout_width="39dp"
                    android:layout_height="39dp"
                    android:background="@drawable/radio3"
                    android:button="@android:color/transparent" />
            </RadioGroup>
        </FrameLayout>
    </LinearLayout>

    <ScrollView
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/picture_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/picture_view"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />

                <Button
                    android:id="@+id/picture_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:text="삭제" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/contents_text"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:gravity="center"
                    android:hint="글자 수 제한 테스트만 작성시 60자이미지 첨부 30자" />

                <Button
                    android:layout_marginRight="12dp"
                    android:id="@+id/picture_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:text="사진 첨부" />

                <ToggleButton
                    android:id="@+id/writing_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:text="현 위치" />
            </FrameLayout>

            <ImageView
                android:id="@+id/writing_location_map"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@drawable/mapimg"
                android:orientation="horizontal"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>